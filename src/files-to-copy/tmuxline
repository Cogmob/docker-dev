# This tmux statusbar config was created by tmuxline.vim
# on Wed, 30 Nov 2016

set -g status-bg "colour7"
set -g message-command-fg "colour7"
set -g status-justify "right"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-fg "#ffffd7"
set -g message-bg "colour14"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour7"
set -g message-command-bg "colour14"
set -g status-attr "none"
# set -g status-utf8 "on"
set -g pane-border-fg "#ffffd7"
set -g status-left-attr "none"
setw -g window-status-fg "colour14"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour7"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour11"
setw -g window-status-separator ""
setw -g window-status-bg "colour7"
set -g status-left "            "
set -g status-right "            "

setw -g window-status-format "#[fg=colour14,bg=colour7] #W "
setw -g window-status-current-format "#[fg=colour0,bg=colour7] #W"
