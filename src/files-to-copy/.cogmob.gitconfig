[push]
	default = matching
[core]
	trustctime = false
	editor = vim
	filemode = false
	autocrlf = input
	safecrlf = false
	pager = cat
[color]
	ui = true
[credential]
	helper = cache --timeout=3600
[mergetool]
	keepbackups = false
	keeptemporaries = false
	prompt = false
	trustexitcode = false
[merge]
	tool = vimdiff
[alias]
	st = status -sb
	unstage = reset HEAD --
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	br = branch
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
[user]
	email = luke.avery@live.co.uk
	name = cogmob
